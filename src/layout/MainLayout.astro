---
import "../styles/style.css";
import Navigation from "../components/Navigation.astro";
import Footer from "../components/Footer.astro";
import Topknap from "../components/Topknap.astro";
const { title } = Astro.props;
---

<html lang="en">
  <head>
    <!-- europæisk sprog -->
    <meta charset="utf-8" />

    <!-- Det eks hvis man bruger safari - så browser ser ens ud-->
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />

    <!-- Fortæller at det er et pesponsivt site -->
    <meta name="viewport" content="width=device-width" />

    <!-- SEO -->
    <meta name="description" content="Girl Talk til forældre" />
    <meta name="author" content="Sebastian, Lucas, Jo, Emil og Ester" />
    <meta name="copyright" content="Team_16" />

    <!-- Den kommer ikke frem hos søgemaskiner -->
    <meta name="robots" content="noindex, nofollow" />

    <!-- fa-icon -->
    <link rel="icon" type="image/svg+xml" href="https://www.girltalk.dk/static/favicon/favicon-32x32.png" />

    <!-- FONTE - Archivo -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Archivo:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet" />

    <!-- FONTE - Obviosly -->
    <link rel="stylesheet" href="https://use.typekit.net/ndp6fxn.css" />

    <meta name="generator" content={Astro.generator} />

    <!-- titel på siden -->
    <title>{title}</title>
  </head><body id="top">
    <Navigation />
    <!-- <h1>{title}</h1> -->

    <main>
      <slot />
    </main>

    <Topknap />
    <Footer />
    <script src="https://unpkg.com/scrollreveal"></script>
    <script>
      window.addEventListener("load", () => {
        const sr = ScrollReveal({
          distance: "160px",
          duration: 1350,
          easing: "ease-out",
        });

        sr.reveal(".hero-h1, .billedet, .taleboble1, .tekst1", { delay: 110, origin: "left" });
        sr.reveal(".kedafdet-pige", { delay: 110, origin: "bottom" });
        sr.reveal(".hero-mor, .hero-datter, .citat", { delay: 110, origin: "top" });
        sr.reveal(".hero-textbox, .content, .taleboble2, .tekst2", { delay: 110, origin: "right" });
      });
    </script>
  </body>
</html>
