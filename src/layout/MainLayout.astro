---
import "../styles/style.css";
import Navigation from "../components/Navigation.astro";
const { title } = Astro.props;
---

<html lang="en">
  <head>
    <!-- europæisk sprog -->
    <meta charset="utf-8" />

    <!-- Det eks hvis man bruger safari - så browser ser ens ud-->
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />

    <!-- Fortæller at det er et pesponsivt site -->
    <meta name="viewport" content="width=device-width" />

    <!-- SEO -->
    <meta name="description" content="Girl Talk til forældre" />
    <meta name="author" content="Sebastian, Lucas, Jo, Emil og Ester" />
    <meta name="copyright" content="Team_16" />

    <!-- Den kommer ikke frem hos søgemaskiner -->
    <meta name="robots" content="noindex, nofollow" />

    <!-- fa-icon -->
    <link rel="icon" type="image/svg+xml" href="/cfl-logo.png" />

    <!-- FONTE - Archivo -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Archivo:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet" />

    <!-- FONTE - Obviosly -->
    <link rel="stylesheet" href="https://use.typekit.net/ndp6fxn.css" />

    <meta name="generator" content={Astro.generator} />

    <!-- titel på siden -->
    <title>{title}</title>
  </head><body id="top">
    <Navigation />
    <!-- <h1>{title}</h1> -->

    <main>
      <slot />
    </main>
  </body>
</html>
