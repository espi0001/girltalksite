<style>
  .article {
    max-width: 1440px;
  }
  .citat_section {
    background-color: var(--dreamy-white-color);
    padding: 112px 0px;
  }
  h2 {
    text-align: center;
    align-self: center;
    align-items: center;
    align-content: center;
    color: var(--power-blue-color);
    font-size: 1.4rem;
    margin: 40px 0 40px 0;
  }

  @media (min-width: 1024px) {
    h2 {
      font-size: 3rem;
    }
  }
</style>
