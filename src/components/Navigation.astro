---
import "../styles/style.css";
---

<header>
  <div class="logo">
    <a href="/">
      <img src="/girltalk_logo_black_wide-1.webp" alt="Logo" />
    </a>
  </div>

  <nav>
    <ul class="menu">
      <li><a href="#">Rådgivning</a></li>
      <hr />
      <li><a href="#">Viden</a></li>
      <hr />
      <li><a href="#">Om os</a></li>
      <hr />
      <li><a href="#">Shop</a></li>
      <hr />
      <li><a href="#">Støt</a></li>
      <hr />
      <li><a href="#">Bliv frivillig</a></li>
      <hr />
    </ul>

    <div class="burger">
      <div class="line"></div>
      <div class="line"></div>
      <div class="line"></div>
    </div>
  </nav>
</header>

<style>
  header {
    display: flex;

    justify-content: space-between;
    align-items: center;
    /* padding-top: 25px;
    padding-bottom: 25px; */
    padding-inline: 30px;
    background-color: var(--background-color);

    transition: all 0.3s ease-in-out;
    border-bottom: 1px solid rgba(0, 0, 0, 0.09);
  }

  .logo img {
    width: 140px;
    height: auto;
  }

  nav {
    display: flex;
    align-items: center;
  }

  .menu {
    display: flex;
    list-style: none;
    margin: 0;
    padding: 0;
    flex-wrap: nowrap;
    align-items: center;
  }

  .menu li {
    margin-right: 20px;
  }

  .menu li:last-child {
    margin-right: 0;
  }

  .menu a {
    display: block;
    padding: 10px;
    color: var(--count-on-me-black-color);
    text-decoration: none;
    transition: color 0.3s;
    text-align: end;
    font-weight: 600;
    font-size: 1.25rem;
  }

  .menu a:hover {
    color: var(--power-blue-color);
  }
  hr {
    display: none;
  }
  .burger {
    width: 30px;
    height: 20px;
    cursor: pointer;
  }

  .burger .line {
    width: 100%;
    height: 2px;
    background-color: var(--count-on-me-black-color);
    margin-bottom: 5px;
    transition: 0.2s linear;
  }
  .burger {
    display: none;
  }
  /* __________________________ Tablet delen __________________________ */
  /* Reglen gælder til og med 1024px */
  @media screen and (max-width: 1024px) {
    header {
      padding-inline: 40px;
      text-align: start;
    }
    .menu {
      display: none;
      text-align: start;
    }
    .burger {
      display: block;
      text-align: start;
    }
    .burger.active .line:nth-child(1) {
      transform: rotate(45deg) translate(5px, 5px);
      transition: 0.2s linear;
    }

    .burger.active .line:nth-child(2) {
      opacity: 0;
      transition: 0.15s linear;
    }

    .burger.active .line:nth-child(3) {
      transform: rotate(-45deg) translate(5px, -5px);
      transition: 0.2s linear;
    }

    nav.active .menu {
      display: block;
      background-color: white;
      position: absolute;
      top: 80px;
      left: 0;
      width: 100%;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      z-index: 1;
      text-align: start;
    }

    nav.active .menu li {
      margin: 10px 20px;
      text-align: start;
    }

    nav.active .menu a {
      font-size: 1.2rem;
      text-align: start;
    }
    .logo img {
      width: 90px;
      height: auto;
    }
  }

  /* __________________________ Mobil delen __________________________ */
  /* Reglen gælder til og med 768px */
  @media screen and (max-width: 768px) {
    header {
      padding-inline: 20px;
      text-align: start;
    }

    nav.active .menu a {
      font-size: 1rem;
      text-align: start;
    }
    .logo img {
      width: 70px;
      height: auto;
    }
  }
</style>

<script>
  const burger = document.querySelector(".burger");
  const nav = document.querySelector("nav");
  const menu = document.querySelector(".menu");
  const links = document.querySelectorAll(".menu li a");

  burger.addEventListener("click", () => {
    burger.classList.toggle("active");
    nav.classList.toggle("active");
  });

  links.forEach((link) => {
    link.addEventListener("click", () => {
      burger.classList.remove("active");
      nav.classList.remove("active");
    });
  });
</script>
